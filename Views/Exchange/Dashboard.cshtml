        { "GBP", "ğŸ‡¬ğŸ‡§" },
        { "ZAR", "ğŸ‡¿ğŸ‡¦" },
        { "KES", "ğŸ‡°ğŸ‡ª" },
        { "CNY", "ğŸ‡¨ğŸ‡³" },
        { "JPY", "ğŸ‡¯ğŸ‡µ" },
